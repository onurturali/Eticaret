@model List<Satis>

<div class="row">
    <div class="col">
        <h1>Satışlar</h1>
    </div>
</div>

<form>
    <div class="row mb-3">
        <div class="col-md-2">
            <label class="form-label">Fatura No</label>
            <input type="text" name="faturaNo" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Başlangıç Tarihi</label>
            <input type="date" name="baslangicTarihi" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Bitiş Tarihi</label>
            <input type="date" name="bitisTarihi" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Tutar</label>
            <input type="text" name="tutar" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label w-100 text-light">.</label>
            <button class="btn btn-primary">Filtrele</button>
        </div>
    </div>
</form>

<div class="row">
    <div class="col">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Fatura No</th>
                    <th>Satış Tarihi</th>
                    <th>Adet</th>
                    <th>Tutar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Satis satis in Model)
                {
                    <tr>
                        <td>@satis.FaturaNo</td>
                        <td>@satis.Tarih.ToString("dd.MM.yyyy")</td>
                        <td>@satis.ToplamAdet</td>
                        <td>@satis.ToplamTutar</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>