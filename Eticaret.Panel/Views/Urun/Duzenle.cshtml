@model Urun

@{
    List<Kategori> kategoriler = (List<Kategori>)ViewBag.Kategoriler;
}

<h1>Ürün Düzenle</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <form asp-controller="Urun" asp-action="Guncelle" method="post" autocomplete="off" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="GorselAd" />

                <div class="card-header">
                    <h5 class="card-title">Ürün Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label"></label>
                        <input asp-for="Ad" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="KategoriId" class="form-label"></label>
                        <select asp-for="KategoriId" class="form-select">
                            @foreach (Kategori kategori in kategoriler)
                            {
                                <option value="@kategori.Id">@kategori.Ad</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label asp-for="Fiyat" class="form-label"></label>
                        <input asp-for="Fiyat" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="GorselAd" class="form-label"></label>
                        <input type="file" name="gorsel" class="form-control" />
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>