@model List<Urun>

<h1>Urunler</h1>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Görsel</td>
                    <td>Ad</td>
                    <td>Fiyat</td>
                    <td>Durum</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Urun urun in Model)
                {
                    <tr>
                        <td>
                            <img src="/img/@urun.GorselAd" style="width: 25px; height: 25px;"/>
                        </td>
                        <td>@urun.Ad</td>
                        <td>@urun.Fiyat</td>
                        <td>
                            @if (urun.Durum == 1)
                            {
                                <span>Aktif</span>
                            }
                            else
                            {
                                <span>Pasif</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-end align-items-center">
                                @if (urun.Durum == 1)
                                {
                                    <a asp-controller="Urun" asp-action="Pasiflestir" asp-route-id="@urun.Id" class="btn btn-sm btn-warning me-2">Pasifleştir</a>
                                }
                                else
                                {
                                    <a asp-controller="Urun" asp-action="Aktiflestir" asp-route-id="@urun.Id" class="btn btn-sm btn-success me-2">Aktifleştir</a>
                                }
                                <a asp-controller="Urun" asp-action="Duzenle" asp-route-id="@urun.Id" class="btn btn-sm btn-primary me-2">Düzenle</a>
                                <a asp-controller="Urun" asp-action="Sil" asp-route-id="@urun.Id" class="btn btn-sm btn-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>