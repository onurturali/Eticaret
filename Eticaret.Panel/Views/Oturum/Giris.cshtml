@model Kullanici

@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - Eticaret.Panel</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Oturum" asp-action="GirisYap" method="post" autocomplete="off">
                            <div class="mb-3">
                                <label class="form-label" asp-for="KullaniciAdi"></label>
                                <input class="form-control" asp-for="KullaniciAdi" autocomplete="off" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="Parola"></label>
                                <input class="form-control" asp-for="Parola" autocomplete="off" />
                            </div>
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-success">Giriş Yap</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>